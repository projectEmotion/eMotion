{% trans_default_domain 'FOSUserBundle' %}
 <!--=== Content Part ===-->
    <div class="container">
        {% if error %}
            <div class="alert alert-error" style="color:red;">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <!--Reg Block-->
        <div class="reg-block">
            <div class="reg-block-header">
                <h2>Connexion</h2>
                <ul class="social-icons text-center">
                </ul>
                <p>Pas de compte ? <a class="color-green" href="registration">inscription</a> gratuite ici.</p>
            </div>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                            {% if csrf_token %}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            {% endif %}
                        <div class="input-group margin-bottom-20">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}" class="form-control"/>
                        </div>
                       <div class="input-group margin-bottom-20">
                           <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                           <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}" class="form-control"/>
                       </div>
                        <div class="mot_de_passe">
                            <a href="{{path('fos_user_resetting_request')}}">Mot de passe oubli√© ?</a>
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="row button-connex">
                            <div class="col-md-10 col-md-offset-1">
                                <button type="submit" class="btn-u btn-block">{{ 'security.login.submit'|trans }}</button>
                        </div>
        </div>
            </form>

        </div>
        <!--End Reg Block-->
    </div><!--/container-->
    <!--=== End Content Part ===-->

