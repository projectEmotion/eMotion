<!--=== Content Part ===-->
    <div class="container content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <form class="reg-page" action="{{path('fos_user_registration_register')}}" method="post">
                    <div class="reg-header">
                        
                        <p>Déjà inscrit ? Cliquez sur <a href="login" class="color-green">Connexion</a> pour vous connecter.</p>
                    </div>

                    <label>Username</label>
                    {{ form_widget(form.username) }}
                                      
                    <label>Email Address <span class="color-red">*</span></label>
                    {{ form_widget(form.email) }}

                    <label>Password <span class="color-red">*</span></label>
                    {{ form_widget(form.plainPassword) }}
		    <label>Date de naissance</label>
                    <div class="col-10">
                        {{ form_widget(form.dateOfBirth) }}
                    </div>
		    <br>
		    <label>Adresse</label>
                    {{ form_widget(form.adress) }}
		    <div class="row">
                        <div class="col-sm-6">
                            <label>Ville </label>
                            {{ form_widget(form.ville) }}
                        </div>
                        <div class="col-sm-6">
                            <label>Code postal</label>
                            {{ form_widget(form.codePostal) }}
                        </div>
                    </div>
		    <label>Téléphone</label>
                    {{ form_widget(form.phone) }}
		    <label>Licence</label>
                    {{ form_widget(form.numberLicence) }}
                    <hr>
                    {{ form_widget(form._token) }}
                    <div class="row">
                        <div class="col-lg-6 checkbox">
                            <label>
                                <input type="checkbox"> 
                                J'ai lu  <a href="page_terms.html" class="color-green">Les conditions générales</a>
                            </label>                        
                        </div>
                        <div class="col-lg-6 text-right">
                            <button class="btn-u" type="submit">S'inscrire</button>                        
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div><!--/container-->		
    <!--=== End Content Part ===-->