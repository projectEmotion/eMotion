<div class="container-fluid no-padd">
    <div class="bg-img">
        <div class="header">
            <div class="container">
                <div class="menu">eMotion</div>
                <div class="Links">
                    <a href="/">Home</a>
                    <a href="/admin">Admin</a>
                    <a href="/register">Inscription</a>
                </div>
                <div class="container part1 col-md-12">
                    <form action="{{ path('fos_user_registration_register') }}" method="post" class="fos_user_registration_register">
                        
                        <div class="title">Inscription</div>
                        <div class="col-md-3">
                            <div class="login">
                                <div class="input-email">
                                    {{form_label(form.username)}}
                                    {{form_errors(form.username)}}
                                    {{form_widget(form.username)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.firstName)}}
                                    {{form_widget(form.firstName)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.lastName)}}
                                    {{form_widget(form.lastName)}}
                                </div>
                                <div class="input-email alert">
                                    {{form_label(form.email)}}
                                    {{form_errors(form.email)}}
                                    {{form_widget(form.email)}}
                                </div>
                                <div class="input-email alert">
                                    {{form_label(form.plainPassword)}}
                                    {{form_widget(form.plainPassword)}}
                                </div>
                                <div class="input-email alert">
                                    {{ form_row(form._token) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="login">
                                <div class="input-email">
                                    {{form_label(form.adress)}}
                                    {{form_widget(form.adress)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.codePostal)}}
                                    {{form_widget(form.codePostal)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.ville)}}
                                    {{form_widget(form.ville)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.dateOfBirth)}}
                                    {{form_widget(form.dateOfBirth)}}
                                </div>
                                <div class="input-email">
                                    {{form_label(form.numberLicence)}}
                                    {{form_widget(form.numberLicence)}}
                                </div>
                            </div>
                        </div>
                        <div class="button-connex">
                            <div class="btn"><input class="bouton" type="submit" value="{{ 'registration.submit'|trans }}" /></div>
                        </div>
                    </form>


                    <div>


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>