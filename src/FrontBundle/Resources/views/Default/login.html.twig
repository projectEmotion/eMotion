{% extends 'base.html.twig' %}

{% block body %}
    <!--=== Content Part ===-->
    <div class="container">
        <!--Reg Block-->
        <div class="reg-block">
            <div class="reg-block-header">
                <h2>Connexion</h2>
                <ul class="social-icons text-center">
                </ul>
                <p>Pas de compte ? <a class="color-green" href="registration">inscription</a> gratuite ici.</p>
            </div>
            <form method="post" action="{{path('login_page')}}">
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <!-- <input type="text" placeholder="Username" class="form-control">-->
                {{ form_widget(form.userName) }}
            </div>
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input type="password" placeholder="Mot de passe" class="form-control">
            </div>
            <hr>

            <div class="checkbox">
                <label>
                    <input type="checkbox">
                    <p>Se souvenir de moi à la prochaine utilisation </p>
                </label>
            </div>

            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <button type="submit" class="btn-u btn-block">Connexion</button>
                </div>
            </div>
            </form>
            <div class="row text-center">
                <u>
                    <a href="oublie_mdp" class="text-info" id="passForgot">Mot de passe oublié</a>
                </u>
            </div>

        </div>
        <!--End Reg Block-->
    </div><!--/container-->
    <!--=== End Content Part ===-->
{% endblock %}
