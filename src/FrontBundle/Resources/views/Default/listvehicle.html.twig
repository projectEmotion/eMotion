{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">    

    <!--=== Breadcrumbs ===-->
    <div class="breadcrumbs">
        <div class="container">
            
	

            <h1 class="pull-left">Liste des Annonces</h1>
            <div class="row">
		
           
	</div>
