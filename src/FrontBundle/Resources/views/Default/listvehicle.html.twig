 <!--=== Content Part ===-->
    <div class="container content">
        <div class="row">
        
     {% for vehicle in vehicles %}
     <div class="col-sm-3">
            <article class="col-item">
            	<div class="photo">
        			<div class="options-cart-round">
        				<a class="btn btn-default" title="Add to cart" href="/booking/{{vehicle.id}}">
        					<span class="fa fa-shopping-cart"></span>
        				</a>
        			</div>
        			<a href="#"> <img src="{{vehicle.link}}" class="img-responsive" alt="Product Image" /> </a>
        		</div>
        		<div class="info">
        			<div class="row">
        				<div class="price-details col-md-6">
        					<h1>{{vehicle.brand}} {{vehicle.model}}</h1>
        					<span class="price-new">Prix : {{vehicle.priceForHour}} €</span>
        				</div>
        			</div>
        		</div>
        	</article>
            
        </div>
               
            {% endfor %}
   
        </div>
    </div><!--/container-->		
